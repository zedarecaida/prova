let $ = document.querySelector.bind(document);

/*tratativa de salvar*/

let lancamentos = [];

function lancar(event) {
    event.preventDefault();
    let lancamento = {
        Nome: $('#Nome').value,
        Tel: $('#Tel').value,
        Email: $('#Email').value,
    };

    lancamentos.push(lancamento);
    limparFormulario();
        $('#Nome').focus();
}
function limparFormulario(){
    $('#Nome').value = '';
    $('#Tel').value = '';
    $('#Email').value = '';
}
